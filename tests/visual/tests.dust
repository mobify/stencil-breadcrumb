{@c-spec for="Breadcrumb" repository=repo}
    {@c-spec__test describe=".c-breadcrumb"}

        {@c-spec__case expect="It should render a group of iterated navigation links separated by a divider. A class can be included to provide alternate styling of a link."}
            {@c-breadcrumb items=breadcrumbs /}
        {/c-spec__case}

        {@c-spec__case expect="The links can be included manually."}
            {@c-breadcrumb}
                {@c-breadcrumb__item label="Home" url="#" /}
                {@c-breadcrumb__item label="Homeware" url="#" /}
                {@c-breadcrumb__item label="Kitchen" url="#" /}
                {@c-breadcrumb__item label="Cooking & Baking" /}
            {/c-breadcrumb}
        {/c-spec__case}

        {@c-spec__case expect="Alternate styling for a current link can also be included manually."}
            {@c-breadcrumb}
                {@c-breadcrumb__item label="Home" url="#" /}
                {@c-breadcrumb__item label="Homeware" url="#" /}
                {@c-breadcrumb__item label="Kitchen" url="#" /}
                {@c-breadcrumb__item label="Cooking & Baking" class="c--current" /}
            {/c-breadcrumb}
        {/c-spec__case}

    {/c-spec__test}
{/c-spec}
